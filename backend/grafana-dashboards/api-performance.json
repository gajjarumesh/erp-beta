{
  "dashboard": {
    "title": "ERP Platform - API Performance",
    "tags": ["erp", "api", "performance"],
    "timezone": "browser",
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "API Request Rate",
        "type": "graph",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{route}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "label": "Requests/sec", "format": "short" },
          { "format": "short" }
        ]
      },
      {
        "id": 2,
        "title": "API Request Latency (p95)",
        "type": "graph",
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p95 - {{route}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "label": "Duration (seconds)", "format": "s" },
          { "format": "short" }
        ]
      },
      {
        "id": 3,
        "title": "API Request Latency (p99)",
        "type": "graph",
        "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p99 - {{route}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "label": "Duration (seconds)", "format": "s" },
          { "format": "short" }
        ]
      },
      {
        "id": 4,
        "title": "Error Rate by Status Code",
        "type": "graph",
        "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(http_request_errors_total[5m])",
            "legendFormat": "{{method}} {{route}} - {{error_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "label": "Errors/sec", "format": "short" },
          { "format": "short" }
        ]
      },
      {
        "id": 5,
        "title": "Database Query Latency",
        "type": "graph",
        "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(db_query_duration_seconds_bucket[5m]))",
            "legendFormat": "p95 - {{operation}} on {{table}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "label": "Duration (seconds)", "format": "s" },
          { "format": "short" }
        ]
      },
      {
        "id": 6,
        "title": "Database Query Rate",
        "type": "graph",
        "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(db_queries_total[5m])",
            "legendFormat": "{{operation}} on {{table}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "label": "Queries/sec", "format": "short" },
          { "format": "short" }
        ]
      }
    ]
  }
}
