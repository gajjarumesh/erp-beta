{
  "dashboard": {
    "title": "ERP Platform - Queue & Module Metrics",
    "tags": ["erp", "queue", "modules"],
    "timezone": "browser",
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Queue Length",
        "type": "graph",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "queue_length",
            "legendFormat": "{{queue_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "label": "Jobs in Queue", "format": "short" },
          { "format": "short" }
        ]
      },
      {
        "id": 2,
        "title": "Queue Job Processing Rate",
        "type": "graph",
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(queue_jobs_processed_total[5m])",
            "legendFormat": "{{queue_name}} - {{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "label": "Jobs/sec", "format": "short" },
          { "format": "short" }
        ]
      },
      {
        "id": 3,
        "title": "Queue Job Duration",
        "type": "graph",
        "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(queue_job_duration_seconds_bucket[5m]))",
            "legendFormat": "p95 - {{queue_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "label": "Duration (seconds)", "format": "s" },
          { "format": "short" }
        ]
      },
      {
        "id": 4,
        "title": "Module Error Rates",
        "type": "graph",
        "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(module_errors_total[5m])",
            "legendFormat": "{{module}} - {{error_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "label": "Errors/sec", "format": "short" },
          { "format": "short" }
        ]
      },
      {
        "id": 5,
        "title": "Invoices Created",
        "type": "stat",
        "gridPos": { "x": 0, "y": 16, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "sum(rate(invoices_created_total[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops"
          }
        }
      },
      {
        "id": 6,
        "title": "Payments Processed",
        "type": "stat",
        "gridPos": { "x": 6, "y": 16, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "sum(rate(payments_processed_total[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops"
          }
        }
      },
      {
        "id": 7,
        "title": "Workflow Executions",
        "type": "graph",
        "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(workflow_executions_total[5m])",
            "legendFormat": "{{workflow_id}} - {{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "label": "Executions/sec", "format": "short" },
          { "format": "short" }
        ]
      }
    ]
  }
}
